void main ()

{
	float r, pi=3.141592, perimetro, area;
	cout<<"Calcular el perimetro de una circunferencia: "<<endl;
	cout<<"Radio: ";
	cin>>r;
	perimetro=pi*r*2;
	cout<<"perimetro: "<<perimetro<<endl;
	cout<<"Calcular el area de una circunferencia: "<<endl;
	cout<<"Radio: ";
	cin>>r;
	area=pi*r*r;
	cout<<"Area: "<<area; 


    	 
	 getch(); 

}

Proceso Encontrarelperimetroyareadelacircunferencia
	Escribir "Calcular el perimetro de una circunferencia:"
	Leer r
	perimetro<-3.141592*r*2
	Escribir "Perimetro: ",perimetro
	Escribir "Calcular el area de una circunferencia: "
	Leer r
	area<-3.141592*r*r
	Escribir "Area: ",area
FinProceso




Proceso Productoscondescuento
	Escribir "Cuantos productos va a llevar?"
	Leer n
	Si n<=3 Entonces
		Escribir "Ingrese los precios de los productos: "
		Leer p1, p2, p3
		total<-p1+p2+p3
		Escribir "Total: ",total
		descuento<-p1*0.3+p2*0.2+p3*0.1
		Escribir "El descuento: ",descuento	
		Escribir "Ingrese los precios de los productos:"
		Leer p1, p2, p3, p4, p5, p6
		total<-p1+p2+p3+p4+p5+p6
		descuento<-total*0.2
		Escribir "Total: ",total
		Escribir "El descuento: ",descuento
		
		
	Fin si
	Si n>3 y n<=6 Entonces
		Escribir "Ingrese el precio de los productos:"
		Leer p1, p2, p3, p4, p5, p6
		total<-p1+p2+p3+p4+p5+p6
		descuento<-total*0.2
		Escribir "Total: ",total
		Escribir "El descuento: ",descuento
		
	Fin Si
	
	totalapagar<-total-descuento
	Escribir "Total a pagar: ",totalapagar
	
FinProceso
