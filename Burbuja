// burbuja.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;

void cargar(int vec[], int tam);
void ordenar(int vec[], int tam);
void mostrar(int vec[], int tam);

void main ()
{
	int n, vec[MAX], opcion;
	do
	{
		cout<<"Ingrese el numero de elementos del vector: "<<endl;
		cin>>n;
	}while (n>MAX ||n<=0);

	do{
		cout<<"---------MENU----------"<<endl;
		cout<<"1.Cargar"<<endl;
		cout<<"2.Ordenar"<<endl;
		cout<<"3.Mostrar"<<endl;
		cout<<"Ingrese su opcion: "<<endl;
		cin>>opcion;

		switch(opcion)
		{
		case 1: cargar(vec, n); break;
		case 2: ordenar(vec, n); break;
		case 3: mostrar(vec, n); break;
		default: cout<<"Error"<<endl;
		}
		getch();
	}while(opcion!=1);
	getch();
}

	void cargar(int vec[], int tam)
	{
		for (int i=0; i<tam; i++){
			cout<< "Ingrese el valor para vec["<< i << "]=";
			cin>> vec[i];
		}
	}

	void ordenar(int vec[], int tam)
	{
		int aux,m;
		for (int i=0; i<tam-1; i++)
		{
			for(int j=i+1;j<tam;j++)
				if(vec[i]>vec[j]) 
				{
					aux=vec[j];
					vec[j]=vec[i];
					vec[i]=aux;
				}
		}
	}

	void mostrar(int vec[], int tam)
	{
		for(int i=0; i<tam; i++)
	{
		cout<< "vec["<< i << "]=";
		cout<< vec[i]<<endl;
	}
}



	


