void cargar ( int a[], int tam );
int promedio ( int a[], int tam );

void main ()
{
	int tam, a[MAX];
	cout<<"Ingrese el tamaÃ±o del vector: "<<endl;
	cin>>tam;
	cargar(a, tam);
	cout<<"El promedio es: "<<promedio(a, tam)<<endl;
	
