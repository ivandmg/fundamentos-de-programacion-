	Escribir "Valor 1:"
	Leer A
	prom<-prom+A
	Escribir "Valor 2:"
	Leer A
	prom<-prom+A
	Escribir "Valor 3:"
	Leer A
	prom<-prom+A
	Escribir "Valor 4:"
	Leer A
	prom<-prom+A
	Escribir "Valor 5:"
